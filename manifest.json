{
  "manifest_version": 3,
  "name": "trackChats",
  "version": "1.7",
  "description": "Lists your past chats (titles + URLs) from ChatGPT, AI Studio, Gemini, Claude & DeepSeek with autoâ€‘refresh. Now fully working again.",
  "icons": { "128": "icons/icon.png" },
  "permissions": ["activeTab", "storage", "scripting", "tabs"],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://aistudio.google.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://chat.deepseek.com/*"
  ],
  "action": { "default_popup": "popup.html", "default_icon": "icons/icon.png" },
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    { "matches": ["https://chat.openai.com/*"], "js": ["content_scripts/chatgpt.js"] },
    { "matches": ["https://aistudio.google.com/*"], "js": ["content_scripts/aistudio.js"] },
    { "matches": ["https://gemini.google.com/*"], "js": ["content_scripts/gemini.js"] },
    { "matches": ["https://claude.ai/*"], "js": ["content_scripts/claude.js"] },
    { "matches": ["https://chat.deepseek.com/*"], "js": ["content_scripts/deepseek.js"] }
  ]
}